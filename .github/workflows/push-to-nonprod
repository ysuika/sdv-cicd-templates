name: push to nonprod workflow
# This workflow builds and pushes image to a test image repositpry.

on:
  workflow_call:
    inputs:
      test-image-repo:
        required: true
        type: string

# Explicitly revokes all default permissions.
permissions: {}

jobs:
  build-and-push-test:
    name: Build and push image (test)
    if: github.ref != 'refs/heads/main' && github.event_name == 'workflow_dispatch'
    runs-on: self-hosted
    timeout-minutes: 60
    permissions:
      contents: read
      packages: write
    env:
      IMAGE_REPO: ${{ inputs.test-image-repo }}
      REGISTRY: ghcr.io
    steps:
      - name: Checkout
        uses: actions/checkout@v5

      - name: Compute full image name (lowercase)
        id: name
        run: |
          IMAGE_NAME=$(echo "${{ env.IMAGE_REPO }}" | tr '[:upper:]' '[:lower:]')
          echo "image=${IMAGE_NAME}" >> "$GITHUB_OUTPUT"

      - name: Login to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}
          
      - name: Generate image tags to push
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ${{ steps.name.outputs.image }}
          tags: |
            type=sha
            type=raw,value=latest
            type=raw,value=${{ github.ref_name }}-${{ github.run_number }}

      - name: Build and push
        uses: docker/build-push-action@v6
        with:
          network: host     
          file: ./Containerfile
          push: true
          tags: ${{ steps.meta.outputs.tags }}
          
      - name: Push to GitHub Container Repository
        uses: redhat-actions/push-to-registry@v2
        with:
          tags: ${{ steps.meta.outputs.tags }}
